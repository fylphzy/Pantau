<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- state pressed: warna background lebih gelap -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A10000" /> <!-- contoh: merah lebih gelap -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D10000" /> <!-- warna merah normal -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
